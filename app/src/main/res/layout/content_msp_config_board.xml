<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.MspConfigBoardActivity"
        tools:showIn="@layout/activity_msp_config">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtConfigurationBoardIdentifier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold" />

        <View style="@style/AppTheme.SpaceDivider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="System state"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View style="@style/AppTheme.LineDivider" />

        <View style="@style/AppTheme.SpaceDivider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/txtConfigurationBoardName"
            android:text="Board name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtConfigurationBoardName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <View style="@style/AppTheme.SpaceDivider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/txtConfigurationSensors"
            android:text="Sensors"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtConfigurationSensors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/txtConfigurationSdcard"
            android:text="SdCard"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtConfigurationSdcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <View style="@style/AppTheme.SpaceDivider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Battery configuration"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View style="@style/AppTheme.LineDivider" />

        <View style="@style/AppTheme.SpaceDivider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/txtConfigurationBatteryMaxCell"
            android:text="Max cell voltage"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtConfigurationBatteryMaxCell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <View style="@style/AppTheme.SpaceDivider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/txtConfigurationBatteryWarningCell"
            android:text="Warning cell voltage"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtConfigurationBatteryWarningCell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <View style="@style/AppTheme.SpaceDivider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/txtConfigurationBatteryMinCell"
            android:text="Min cell voltage"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtConfigurationBatteryMinCell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <View style="@style/AppTheme.SpaceDivider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/txtConfigurationFeatures"
            android:text="Features"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View style="@style/AppTheme.LineDivider" />

        <View style="@style/AppTheme.SpaceDivider" />

        <TextView
            android:id="@+id/txtConfigurationFeatures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <View style="@style/AppTheme.LineDivider" />

        <View style="@style/AppTheme.SpaceDivider" />
    </LinearLayout>
</ScrollView>