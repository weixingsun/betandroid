<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".activities.MspConfigurationActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_msp_configuration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtConfigurationBoardIdentifier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold" />

        <View style="@style/AppTheme.SpaceDivider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="System state"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View style="@style/AppTheme.LineDivider" />

        <View style="@style/AppTheme.SpaceDivider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/txtConfigurationBoardName"
            android:text="Board name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtConfigurationBoardName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <View style="@style/AppTheme.SpaceDivider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/txtConfigurationSensors"
            android:text="Sensors"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtConfigurationSensors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/txtConfigurationSdcard"
            android:text="SdCard"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View style="@style/AppTheme.LineDivider" />

        <TextView
            android:id="@+id/txtConfigurationSdcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <ProgressBar
            android:id="@+id/barSdcardUsage"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp" />

    </LinearLayout>
</ScrollView>